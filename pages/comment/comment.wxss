/* pages/comment/comment.wxss */
.bgUrl{
    width: 100%;
    height: 600rpx;
    background: url("https://i.loli.net/2018/01/27/5a6c8d3ea11dc.jpeg");
    position: relative;
}
.bgUrl>view>image{
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}
.bgUrl>view{
   position: absolute;
   bottom: 80rpx;
    right: 30rpx;
    display: flex;
    align-items: center;
}
.comment{
    margin: 22rpx 0;
    border: 2rpx solid #efefef;
}
.comment-users-avatar>image{
    width: 56rpx;
    height: 56rpx;
    margin:0 24rpx;
}
.comment-users-avatar{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    margin-bottom: 52rpx;
}
.comment-users>text:nth-of-type(1){
    font-size: 38rpx;
    margin:0 0 26rpx 24rpx;
    display: inline-block;
}
.comment-users>image{
    width: 100%;
    height: 342rpx;
}
.comment-users>text:nth-of-type(2){
    font-size: 28rpx;
    margin:48rpx 20rpx;
    display: inline-block;
    color: #86827c;
}
.comment-users-read>image{
    width: 34rpx;
    height: 34rpx;
    margin-right: 16rpx;
    display: inline-block;
}
.comment-users-read{
    margin-left: 20rpx;
    display: flex;
    align-items: center;
}
.comment-users-read>text{
    font-size: 20rpx;
    margin-right: 16rpx;
    display: inline-block;    
}