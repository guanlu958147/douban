/* pages/details/details.wxss */
.detailsMo{
    position: relative;
    /* width:100%;
    height: 360rpx; */
}
.details{
    width:100%;
    height: 360rpx;
    
    
    -webkit-filter: blur(2px);
}
.details-header{
    color: #fff;
    display: flex;
    flex-direction: row;
    padding: 116rpx 0 0 30rpx;
    position: absolute;
    top:0;
}
.details-header>image{
    width: 200rpx;
    height: 280rpx;
}
.details-header-info{
    margin-left: 32rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.details-header-info>text{
    font-size:40rpx;
    font-weight: 900;
}
.commentStars{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items:center;
    padding-top: 50rpx;            
}
.commentStars>text{
    font-size: 40rpx;
    font-weight: 900;
}
.commentStarsList{
    margin-left: 32rpx;
}
.commentStarsList>text{
    font-size: 22rpx;
    /* margin-top: 16rpx; */
}
.commentStarsList>view{
    height: 32rpx;
}
.commentStarsList>view>image{
    width: 16rpx;
    height: 16rpx;
}
.detailsText{
    margin: 0 30rpx;
}
.details-movie{
    margin: 60rpx 0;
    line-height: 62rpx;
    font-size: 24rpx;
    font-weight: 900;
    color:#3f3f3f;
    display: flex;
    flex-direction: column;
}
.details-btn{
    display: flex;
    justify-content: space-around;
}
.details-btn>button{
    width: 324rpx;
    height: 66rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #e5aa70;
    color: #e5aa70;
    font-size: 28rpx; 
    background: #fff;   
}
.details-introducte>text{
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
}
.details-introducte>text:nth-child(1){
    color: #dfe4e3;
    margin: 80rpx 0 40rpx;
}
.details-introducte>text:nth-child(2){
    color: #2e2f2c;
}